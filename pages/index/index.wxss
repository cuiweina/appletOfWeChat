.banners {
  width: 100%;
  height: 370rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  left: 0;
  bottom: 30px;
  width: 100%;
  padding: 0 50rpx;
  font-size: 16px;
  color: #fff;
}

.news-box {
  padding: 0 10px;
}

.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 8px;
  padding: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

.news-title {
  font-size: 16px;
}

.news-image {
  width: 80px;
  height: 80px;
}

.news-image image {
  width: 80px;
  height: 100%;
}

.sub-title {
  color: #76787e;
  line-height: 36px;
  font-size: 14px;
}

.more {
  margin: 16px 6px;
  padding: 0;
  line-height: 2.3;
  font-size: 13px;
  color: #fff;
  background-color: #179b16;
}
